{
  "name": "moss-ui",
  "version": "0.6.3",
  "description": "The front-end UI framework with Vue.js and SCSS.",
  "main": "dist/moss.js",
  "scss": "src/scss/moss.scss",
  "types": "index.d.ts",
  "directories": {
    "dist": "dist",
    "doc": "docs",
    "example": "example",
    "test": "test"
  },
  "scripts": {
    "test": "jest",
    "prebuild": "node task/pre-build.js",
    "build": "webpack --hide-modules --config ./task/webpack.prod.config.js && npm run pug",
    "dev": "webpack --hide-modules --config ./task/webpack.dev.config.js",
    "watch": "concurrently \"npm run dev -- --watch\" \"npm run pug -- --watch\"",
    "pug": "pug --pretty example/pug/pages/ --out ./example/dist/"
  },
  "author": "archco",
  "bugs": {
    "url": "https://github.com/archco/moss-ui/issues"
  },
  "homepage": "https://github.com/archco/moss-ui",
  "license": "MIT",
  "repository": "github:archco/moss-ui",
  "dependencies": {
    "cake-case": "^1.0.0",
    "clipboard": "^2.0.1",
    "element-measurer": "^1.3.2",
    "element-util": "^1.6.0",
    "fuse.js": "^3.2.0",
    "moo-color": "^0.2.0",
    "normalize.css": "^8.0.0",
    "popper.js": "^1.14.3",
    "scss-palette": "^0.5.2",
    "tooltip.js": "^1.2.0",
    "transition-timing": "^1.0.0",
    "vue-agile": "^0.3.7"
  },
  "devDependencies": {
    "@vue/test-utils": "^1.0.0-beta.16",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.0-charlie.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-vue": "^4.5.0",
    "flush-promises": "^1.0.0",
    "jest": "^22.4.4",
    "mini-css-extract-plugin": "^0.4.0",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "postcss-loader": "^2.1.5",
    "pug": "^2.0.3",
    "pug-cli": "^1.0.0-alpha6",
    "sass-loader": "^7.0.1",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.21.0",
    "svg-inline-loader": "^0.8.0",
    "vue": "^2.5.16",
    "vue-jest": "^2.6.0",
    "vue-loader": "^15.1.0",
    "vue-template-compiler": "^2.5.16",
    "vue-test-utils": "^1.0.0-beta.11",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-merge": "^4.1.2",
    "webpack-notifier": "^1.6.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "modules": false,
          "targets": {
            "browsers": [
              "defaults"
            ]
          }
        }
      ]
    ],
    "env": {
      "test": {
        "plugins": [
          "transform-es2015-modules-commonjs"
        ]
      }
    },
    "plugins": [
      "transform-object-rest-spread"
    ]
  },
  "browserslist": "defaults",
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      ".*\\.(vue)$": "vue-jest",
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(gif|ttf|eot|svg)$": "<rootDir>/test/__mocks__/fileMock.js",
      "^@/(.*)$": "<rootDir>/src/js/$1"
    }
  }
}
