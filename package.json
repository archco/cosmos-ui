{
  "name": "cosmos-ui",
  "version": "0.0.0",
  "description": "The user interface framework for front-end.",
  "main": "index.js",
  "directories": {
    "example": "example",
    "test": "test"
  },
  "scripts": {
    "test": "mocha test --require babel-register",
    "prebuild": "node task/banner.js",
    "build": "npm run dev && npm run min",
    "dev": "npm run mix && npm run pug",
    "watch": "node node_modules/concurrently/src/main \"npm run mix:watch\" \"npm run pug:watch\"",
    "min": "cross-env NODE_ENV=production webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "mix": "cross-env NODE_ENV=development webpack --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "mix:watch": "cross-env NODE_ENV=development webpack --watch --progress --hide-modules --config=node_modules/laravel-mix/setup/webpack.config.js",
    "pug": "node node_modules/pug-cli --pretty example/views/pages/ --out ./example/html/",
    "pug:watch": "npm run pug -- --watch"
  },
  "author": "archco",
  "bugs": {
    "url": "https://github.com/archco/cosmos-ui/issues"
  },
  "homepage": "https://github.com/archco/cosmos-ui",
  "license": "MIT",
  "dependencies": {
    "normalize.css": "^7.0.0",
    "scss-palette": "^0.3.3",
    "vue": "^2.3.4"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-preset-env": "^1.6.0",
    "babel-register": "^6.24.1",
    "chai": "^4.0.2",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.1",
    "fs-extra": "^3.0.1",
    "laravel-mix": "^1.1.1",
    "mocha": "^3.4.2",
    "pug": "^2.0.0-rc.2",
    "pug-cli": "^1.0.0-alpha6",
    "webpack": "^3.1.0"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "browser": true,
      "commonjs": true,
      "es6": true,
      "jquery": true,
      "mocha": true
    },
    "extends": "eslint:recommended",
    "parser": "babel-eslint",
    "parserOptions": {
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off"
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "browsers": [
              "> 1%"
            ]
          }
        }
      ]
    ]
  },
  "postcss": {
    "plugins": {}
  },
  "browserlist": "> 1%"
}
