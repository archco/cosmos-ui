h3 Basic
button(class='btn warning' onclick='Moss.modal.toggle("test-modal")') Trigger
modal(name='test-modal')
  h3 Test
  p=lorem

h3 Close when another clicked
button(class='btn success' onclick='Moss.modal.show("test-modal2")') Trigger
modal(name='test-modal2' title='Close when another clicked' close-on)
  p=lorem

h3 with Actions
button(class='btn' onclick='Moss.modal.toggle("test-modal3")') Trigger
modal(name='test-modal3' title='with Actions')
  div.p-3
    input(name='title' placeholder='test me..')
  div(slot='actions')
    button(class='btn default' data-toggle='close') Cancel
    button(class='btn success') OK

h3 Custom header
button.btn.danger(onclick='Moss.modal.show("test-modal5")') Open modal
modal(name='test-modal5' title='fake title' effect='fade')
  div.modal-header.bg-shade(slot='header')
    h3.text-danger Custom Title
    button.btn-text(data-toggle='close')
      icon(name='close')
  p=lorem

h3 Icon close button
button(class='btn info' onclick='Moss.modal.toggle("test-modal4")') Trigger
modal(name='test-modal4' title='Icon close button' close-button-html='<i class="fas fa-times"></i>' close-on)
  p=lorem
  div(slot='actions')
    button(class='btn success' onclick='Moss.modal.close("test-modal4")') Okay

h3 Transition Effects

button.btn.default(onclick='Moss.modal.show("test-modal6")') no-effect (default)
modal(name='test-modal6' title='No effect' close-on)
  p.text-center No transition effect.

button.btn.info(onclick='Moss.modal.show("test-modal7")') fade
modal(name='test-modal7' title='Fade' effect='fade' close-on)
  p.text-center <code>fade</code> effect.

button.btn.link(onclick='Moss.modal.show("test-modal8")') from-top
modal(name='test-modal8' title='From-top' effect='from-top' close-on)
  p.text-center <code>from-top</code> effect.

h3 Nested Modal

button.btn.info(@click='$moss.modal.show("test-modal9")') Parent
modal(name='test-modal9' title='Parent' close-on)
  h3 Hello World!
  p
    button.btn.success(@click='$moss.modal.show("test-modal10")') Child
modal(name='test-modal10' title='Child' close-on)
  h3 Have a nice day!
  p=lorem
