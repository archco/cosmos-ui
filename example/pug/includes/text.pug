  li.font-base font-base
  li.font-accent font-accent
  li.font-cursive font-cursive
  li.font-monospace font-monospace

h3 Font Size

ul.mb-3
  li.font-size-sm font-size-sm
  li.font-size-lg font-size-lg

h3 Font Weight

ul.mb-3
  li.font-weight-lighter font-weight-lighter
  li.font-weight-light font-weight-light
  li.font-weight-normal font-weight-normal
  li.font-weight-bold font-weight-bold
  li.font-weight-bolder font-weight-bolder

