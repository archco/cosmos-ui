ul.mb-3
  li.font-italic font-italic

h3 Alignment

div.mb-3
  div.bg-shade.text-left text-left
  div.text-center text-center
  div.bg-shade.text-right text-right

h3 Transformation

- var text = 'hEllo, WoRlD!'
.mb-3
  span='Example: ' + text
ul.mb-3
  li
    span= 'text-lowercase: '
    span.text-lowercase= text
  li
    span= 'text-uppercase: '
    span.text-uppercase= text
  li
    span= 'text-capitalize: '
    span.text-capitalize= text

h3 Miscellaneous
p
  span='help: '
  span.help This is help comments.
p
  span='text-truncate: '
  span(class='text-truncate' style='display:inline-block;width:10em;')=lorem
