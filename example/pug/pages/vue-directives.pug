//- vue directives.
extends ../layout/layout.pug

block title
  title= 'Vue Directives'

block content
  div(class='row')
    aside(class='col-md-2 hide-only-mobile')
      ul(class='menu list fixed' v-scrollspy="{activeClass: 'bg-color-shade', activeTarget: 'self', offset: 100}")
        li(is='anchored-tag' tag='li') v-focus
        li(is='anchored-tag' tag='li') v-trigger
        li(is='anchored-tag' tag='li') v-modal
        li(is='anchored-tag' tag='li') v-clipboard
        li(is='anchored-tag' tag='li') v-set-value
        li(is='anchored-tag' tag='li') v-tooltip
        li(is='anchored-tag' tag='li') v-ripple
        li(is='anchored-tag' tag='li') v-outer

    section(class='col-md-10')
      include ../includes/directives
      anchored-tag(tag='h1' owned) v-tooltip
      include ../includes/v-tooltip
      anchored-tag(tag='h1' owned) v-ripple
      include ../includes/v-ripple
      anchored-tag(tag='h1' owned) v-outer
      include ../includes/v-outer
