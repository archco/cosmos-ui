-
  var models = [
    {id: 1, name: 'James', age: 35},
    {id: 2, name: 'Caren', age: 24},
    {id: 3, name: 'Bob', age: 30},
  ];

form(action='#' method='POST' class='form-inline')
  input(type='text' name='name' placeholder='Name')
  input(type='number' name='age' placeholder='Age')
  button(type='submit' class='btn success') Create

ul(class='simple-crud-list')
  each model in models
    li(is='simple-crud')
      div(slot='read')
        span(class='content')
          span= `id: ${model.id} name: ${model.name} age: ${model.age}`
        span(class='actions btn-group')
          button(class='btn' data-toggle='update') Edit
          button(class='btn danger' data-toggle='delete') Delete
      form(slot='update' action='#' method="POST")
        span(class='content')
          span= `id: ${model.id}`
          input(type='hidden' name='id' value=model.id)
          label
            span Name:
            input(type='text' name='name' value=model.name class='inline')
          label
            span Age:
            input(type='number' name='age' value=model.age class='inline')
        span(class='actions btn-group')
          button(type='button' class='btn default' data-toggle='cancel') Cancel
          button(type='submit' class='btn success') Edit
      form(slot='delete' action='#' method='POST')
        span(class='content')
          span(class='color-danger') <b>Are you sure?</b> Remove this model?
        span(class='actions btn-group')
          button(type='submit' class='btn danger') Delete
          button(type='button' class='btn default' data-toggle='cancel') Cancel
